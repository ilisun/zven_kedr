<div class="container">
  <div class="row">
    <h1 class="center"><span class="light">Обрезка</span> изображения</h1>
    <div class="col-xs-12 col-sm-2"></div>
    <div class="col-xs-12 col-sm-8">
      <hr class="divider">
      <%= form_for (@product) do |f| %>
        <div class="user-crop-preview">
          <%= f.crop_preview :image %>
        </div>
        <div class="user-crop-area">
          <%= f.cropbox :image, :width => 600 %>
        </div>
        <div class="clear"></div>
        <div class="actions", align="center">
          <%= f.submit "Обрезка", class: "btn btn-primary" %>
        </div>
      <% end %>
      <hr class="divider">
    </div>
    <div class="col-xs-12 col-sm-2"></div>
  </div>
</div>

